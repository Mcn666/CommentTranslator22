<UserControl x:Class="CommentTranslator22.Popups.Command.Command1Window"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommentTranslator22.Popups.Command"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400" Background="#FF424242" MaxWidth="600">
    <Grid>
        <Border BorderThickness="1" BorderBrush="DimGray">
            <TextBlock TextWrapping="Wrap" Text="{Binding TranslateResult}" Foreground="White" Margin="5,5,5,5"/>
        </Border>
    </Grid>
</UserControl>
